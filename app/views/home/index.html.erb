<div class="d-flex justify-content-center align-items-center flex-column" style="height:100vh" >   
    <div class=" border border-info p-5 rounded">
        <%= form_with url: "/submit", method: :post do |form| %>
            <div class="form-check d-flex align-items-center mb-1" style="gap:2%">
            <%= form.radio_button :category, '1',class:"form-check-input mb-2", checked:true %>
            <label class="form-check-label" for="flexRadioDefault1">
            <h3>Student</h3>
            </label><br/>
            </div>

            <div class="form-check d-flex align-items-center mb-1" style="gap:2%">
            <%= form.radio_button :category, '2',class:"form-check-input mb-2" %>
            <label class="form-check-label" for="flexRadioDefault2">
            <h3>Faculty</h3>
            </label><br />
            </div>

            <div class="form-check d-flex align-items-center mb-1" style="gap:2%,width:50px">
            <%= form.radio_button :category, '3',class:"form-check-input mb-2" %>
            <label class="form-check-label" for="flexRadioDefault3">
            <h3>Non-Technical Staff</h3>
            </label><br />
            </div>

            <div class="form-check d-flex align-items-center mb-1" style="gap:2%">
            <%= form.radio_button :category, '4',class:"form-check-input mb-2" %>
            <label class="form-check-label" for="flexRadioDefault4">
            <h3>Others</h3>
            </label><br />
            </div>

            <div class="d-flex w-100 justify-content-center">
            <%= form.submit "Proceed", class:"btn btn-primary"%>
            </div>

        <%end%>
    </div>
</div>



